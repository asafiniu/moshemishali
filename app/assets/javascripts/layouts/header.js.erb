$(document).ready(function(e){
	attachEvents();
});
attachEvents = function() {
	$(document).resize(function(e){
		$("#main").width(window.screen.availWidth-150)
	}).resize();
	$(".headerbuttons a.headerbutton").on("click", function(e){
		hideAllButSection($(e.target).attr("goto").toLowerCase());
	});
};
hideAllButSection = function(sectionID) {
	$(".section").hide();
	$(".section#" + sectionID).show();
};
preloadImage = function(imageUrl) {
	if ( imageUrl && imageUrl.match(/jpg|png|gif/i)) {
		var pic = new Image();
		pic.src = imageUrl;
	}
}