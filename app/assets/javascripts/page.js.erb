function scroll(dir, spd) {
 var scrl = $('#mrq');
 if (scrl) {
   if (dir === 'up' || dir === 'down') {
     scrl.direction = dir;
     scrl.scrollAmount =  spd ? spd : 10;
   }
   else {
     scrl.scrollAmount = spd ? spd : 0;
   }
 }
}
