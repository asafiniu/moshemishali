$(document).ready(function(e){
	attachFilmsEvents();
});
attachFilmsEvents = function() {
	$("a.filmthumb").on("click", function(e) {
		var a = $(e.target).parent();
		var film = {
			title: a.attr("title"), 
			description: a.find(".desc").html(), 
			vidlink: a.attr("data_url"),
			synopsis: a.find(".syn").html()
		};

		if ( film.vidlink && film.vidlink.match("http") ) {
			showFilm(film);
		}
	});
}