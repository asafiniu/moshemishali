table.index_table {
  background: black;
  color: #afafaf;
  width: 100%;
  cursor: default;
  margin: 0 auto
}

table.index_table tr.header {
  background: #ec8;
  color: black
}

table.index_table tr.data {
  border: black 1px solid
}

table.index_table tr td {
  text-align: center
}

table.index_table a {
  opacity:0.7
}

table.index_table a:hover {
  opacity:1 !important
}

table.index_table tr.data:hover * {
  color: white;
  border-color: white;
}

table.index_table tr a.index_action {
  margin: 0 auto;
  background: url(<%= asset_path "index_actions.png" %>);
  display: block;
  width: 22px;
  height: 30px
}

table.index_table tr a.index_action.edit {
  background-position: -26px 0
}

img.video_thumbnail.index_item {
  width: 111px;
  height: 62px
}

img.youtube_button{
  width: 40px;
  height:40px
}

tr.data_edit {
  display:none;
  background: rgb(112, 112, 112)
}