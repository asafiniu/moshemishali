body {
	background-color:#000;
	color:Gray;
	font:12pt "times new roman", arial;
	overflow-x:hidden
}

div#header {
	background-image:url(<%=asset_path"top.jpg"%>);
	background-position:top;
	background-repeat:no-repeat;
	background-size: 100%;
	display:block;
	min-height:190px;
	width:100%
}

div#header div.headerbuttons {
	width: 801px;
	height:23px;
	margin:0 auto;
	position:relative;
	top:150px
}

div#header div.headerbuttons a,
div#contact div.networks a {
	background: url(<%= asset_path "buttons.png" %>);
	text-decoration:none !important;
	display:inline-block;
}

div#contact div.networks a {
	opacity: 0.7;
}

div#contact div.networks a:hover {
	opacity:1.0
}

div#header div.headerbuttons a {
	height:23px;
	width:111px
}

div#contact div.networks a {
	height:30px;
	width:30px
}

div#header div.headerbuttons a.commercial {background-position: 0px 0px}
div#header div.headerbuttons a.commercial:hover, div#header div.headerbuttons a.commercial.active {background-position: 0px -26px}
div#header div.headerbuttons a.films {background-position: 0px -52px}
div#header div.headerbuttons a.films:hover,div#header div.headerbuttons a.films.active {background-position: 0px -78px}
div#header div.headerbuttons a.stills {background-position: 0px -104px}
div#header div.headerbuttons a.stills:hover,div#header div.headerbuttons a.stills.active {background-position: 0px -130px}
div#header div.headerbuttons a.contact {background-position: -114px 0px}
div#header div.headerbuttons a.contact:hover,div#header div.headerbuttons a.contact.active {background-position: -114px -26px}
div#header div.headerbuttons a.home {background-position: -113px -52px}
div#header div.headerbuttons a.home:hover, div#header div.headerbuttons a.home.active {background-position: -113px -78px}
div#header div.headerbuttons a.filmography {background-position: -228px 0px}
div#header div.headerbuttons a.filmography:hover,div#header div.headerbuttons a.filmography.active {background-position: -228px -26px}
div#header div.headerbuttons a.musicvideos {background-position: -227px -52px}
div#header div.headerbuttons a.musicvideos:hover,div#header div.headerbuttons a.musicvideos.active {background-position: -227px -78px}
div#contact div.networks a.facebook {background-position: -71px -154px}
div#contact div.networks a.linkedin {background-position: -36px -154px}
div#contact div.networks a.gmail {background-position: 0px -154px}

div#main {
	margin:0 auto
}

div.filmography,
div.films {
	margin-top: 10px !important;
	height:290px
}

div.pageheader,div.filmography div.sectionheader,div.filmography ul li span {
	color:#E1C811
}

div.pageheader {
	font-size:30pt;
	margin:20px auto 0 10%;
	display:none
}

div.contact .addresses .pageheader,
div.contact .networks .pageheader {
	margin-top: 0 !important;
	margin-left: 0 !important;
	display:block
}

div.contact .networks .pageheader {
	margin-bottom: 20px !important
}

div.contact .addresses,
div.contact .networks {
	width: 400px;
	float:left
}

div.contact .networks {
	float:right
}

div.contact .networks a img {
	width: 30px;
	height: 30px;
	opacity:0.8
}

div.contact .networks a:hover img {
	opacity:1
}

div.filmography div.sectionheader {
	font-size:18pt;
	font-weight:700;
	margin:0
}

div.filmography ul li span {
	font-size:13pt;
	font-style:italic
}

div.filmography,div.contact,div.films,div.stills {
	color:#afafaf;
	font-size:12pt;
	margin:5px auto 0;
	overflow:scroll;
	overflow-x:hidden;
	overflow-y:auto;
	padding-left:3.5%;
	width:80%
}

div.stills {
	margin: 50px 165px;
	font-size: 30pt
}

div.films img {
	border-color:#000;
	border-style:groove;
	height:280px;
	opacity:0.7;
	padding:7px;
	width:200px
}

div.films img:hover {
	filter:alpha(opacity=100);
	opacity:1
}

div.films a:not(.soon) img {
	cursor:pointer
}

.videodetails #title,.videodetails #description {
	font-size:32pt;
	font-weight:700;
	text-align:center
}

.videodetails #description {
	font-size:13pt;
	font-weight:400
}

.videodetails iframe {
	float:left;
	height:315px;
	margin:2px 20px!important;
	width:560px
}

.videodetails #synopsis {
	float:right;
	font-size:11pt;
	margin:10px auto 0;
	width:400px
}

.videodetails .vidout {
	text-align:justify;
	vertical-align:top
}

a.filmthumb {
	text-decoration:none
}

.fancybox-skin.film {
	background-color:#afafaf;
	border:2px outset #666;
	border-radius:15px!important;
	color:#000;
	padding:6px
}

.hometable {
	text-align:justify;
	vertical-align:top
}

.video_gallery {
	background-color: #000;
	color: #afafaf;
	height: 330px;
	margin: 20px auto 0;
	width: 100%
}

.video_gallery iframe {
	height: 330px;
	width: 528px
}

.video_gallery .slider {
	height: inherit;
	float: left;
	width: 512px;
	overflow: scroll
}

.video_gallery div.slider_single,
.video_gallery img.video_thumbnail {
	-moz-border-radius: 10px;
	border-radius: 10px;
	-webkit-border-radius: 10px
}

.video_gallery .slider_single {
	cursor:pointer !important;
	float:left;
	width:498px;
	border-width: 1px;
	border-color: #000;
	border-style: solid
}

.video_gallery .slider_single:hover {
	border-color: #afafaf
}

.video_gallery .slider_single .arrow {
	display:none;
	width: 33px;
	height: 33px;
	background: url("/fancybox/source/fancybox_sprite.png") 0 -70px;
	float: right;
	margin-bottom: -33px;
	margin-right: 3px
}

.video_gallery .slider_single:hover .arrow {
	/*TURN ON IF ARROW IS IN USE: display:block*/
}

.video_gallery .slider_single img.video_thumbnail {
	height:125px;
	width:222px;
	opacity:0.7
}

.video_gallery .slider_single:hover {
	border: 1px #afafaf solid
}

.video_gallery .slider_single:hover img.video_thumbnail {
	opacity:1
}

.video_gallery .slider_single:hover .info {
	color: #fff
}

.video_gallery .vidframe.commercial,.video_gallery .vidframe.music_video {
	margin-left:50px;
	padding:10px
}

.video_gallery .vidframe {
	float:right
}

.video_gallery .slider_single img.video_thumbnail {
	display:inline;
	float:left
}

.video_gallery .slider_single .info {
	float: right;
	text-align: left;
	width: 276px
}

.video_gallery .slider_single .info p {
	margin-left: 5px;
	margin-bottom: 0
}

div.video_gallery div.slider_single div.info p.title {
	font-weight: bold;
	font-size: 13pt !important;
	margin-bottom: -10px !important
}

.video_gallery .inst_vidframe {
	display:block;
	margin-top:40%
}

.fb-like {
	left:50px!important;
	position:absolute!important;
	top:161px!important
}

div#footer {
	background-image:url(<%=asset_path"bottom.jpg"%>);
	background-position:top;
	background-repeat:no-repeat;
	background-size: 100%;
	bottom:0;
	color:#afafaf;
	min-height:110px;
	position:fixed;
	text-align:right;
	width:100%
}

div#footer span.footertext {
	cursor:default;
	margin-right:45px
}

.films a.soon,a.filmthumb.soon {
	cursor:not-allowed
}

::-webkit-scrollbar {
	width: 10px;
}

/* Track */
::-webkit-scrollbar-track {
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
	-webkit-border-radius: 10px;
	border-radius: 10px;
}

/* Handle */
::-webkit-scrollbar-thumb {
	-webkit-border-radius: 10px;
	border-radius: 10px;
	background: rgba(175,175,175,1);
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
}

::-webkit-scrollbar-corner       {
	background: #000
}